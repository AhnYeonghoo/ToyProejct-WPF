<Window x:Class="BindingShort.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BindingShort"
        mc:Ignorable="d"
        FontSize="24"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="300" Width="450">
    <StackPanel Margin="10" VerticalAlignment="Center">
        <TextBox Margin="0 10" Text="{Binding Message, UpdateSourceTrigger=PropertyCHanged}" />
        <TextBlock Margin="0 10" Text="{Binding Message}" />
    </StackPanel>
</Window>
